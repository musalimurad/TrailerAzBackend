<section style="@(Model.AllFilms.Count==0? "display:none;": null)" class="tv-show">
    <div class="container">
        <div class="row">
            <div class="movie-head">
                <h1>All Films</h1>
            </div>

            <div class="movie-content">
                <div class="container">
                    <div class="row">
                        @foreach (var film in Model.AllFilms)
                        {
                            <div class="movie-card col-6 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                                <a href="@Url.Action("Details", "Film", new {id=film.ID })">
                                    <div class="movie-img">
                                        <img class="img-fluid"
                                             src="@film.Photo" alt="">
                                        <i class="fas fa-eye"></i>
                                    </div>
                                </a>
                                <div class="movie-text">
                                    <h4>@film.Name</h4>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>

        </div>
        @if (Model.AllFilms.Count < 3)
        {
            <div style="display:none;" class="load-more col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <button>Load More</button>
            </div>
        }
        else
        {
            <div class="load-more col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <button>Load More</button>
            </div>

        }
    </div>
    </div>
</section>

