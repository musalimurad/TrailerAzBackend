<div style="@(Model.GetFilms.Count==0? "display:none": null)" class="video-slider">

    @foreach (var film in Model.GetFilms)
    {

        <div onclick="toggle();" class="intern-video">
            <a style="text-decoration:none;" href="@Url.Action("Details","Film", new {id=film.ID })">
                <img src="@film.Photo">
                <p>@film.Name</p>
            </a>

        </div>
    }



</div>



<!-- video slider end -->
<!-- Trending start -->
@if (Model.GetFilmsIsTrending.Count != 0)
{
    <section style="@(Model.GetFilmsIsTrending.Count==0? "display:none;": null)" id="PluginOne" class="trending-slider">
        <div class="container">
            <div class="row">
                <div class="card-name">
                    <h3>Trending Films</h3>
                </div>
                <div class="all">
                    @foreach (var film in Model.GetFilmsIsTrending)
                    {
                        <div class="card-film">

                            <img src="@film.Photo"
                                 alt="">
                            <div class="card-text">
                                <a href="@Url.Action("Details","Film", new {id=film.ID })"><i class="play-btn fad fa-play-circle"></i></a>
                                <h5 style="display: none;">@film.Name</h5>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </section>
}


<!-- Trending end -->
