@model FilmDetailVM
<!-- film filter start -->

<section class="filter">
    <div class="container">
        <div class="col-12">
            <div class="left">

                <select class="year-select" name="" id="">
                    <option hidden selected value="">Select year</option>
                    <option value="2000">2000</option>
                    <option value="2001">2001</option>
                    <option value="2002">2002</option>
                    <option value="2003">2003</option>
                    <option value="2004">2004</option>
                    <option value="2005">2005</option>
                    <option value="2006">2006</option>
                    <option value="2007">2007</option>
                    <option value="2008">2008</option>
                    <option value="2009">2009</option>
                    <option value="2010">2010</option>
                    <option value="2011">2011</option>
                    <option value="2012">2012</option>
                    <option value="2013">2013</option>
                    <option value="2014">2014</option>
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>

                </select>

                <select class="type-select" name="" id="">
                    <option selected hidden value="">Select Type of</option>
                    <option value="animasyon">Animasyon</option>
                    <option value="aksiyon">Aksiyon</option>
                    <option value="belge">Belgesel</option>
                    <option value="bilimkurgu">Bilimkurgu</option>
                    <option value="biyografi">Biyografi</option>
                    <option value="casusluk">Casusluk</option>
                    <option value="cizgiroman">Çizgi roman</option>
                    <option value="dini">Dini</option>
                    <option value="erotik">Erotik</option>
                    <option value="fantastik">Fantastik</option>
                    <option value="felaket">Felaket</option>
                    <option value="gerilim">Gerilim</option>
                    <option value="komedi">Komedi</option>
                    <option value="korku">Korku</option>
                    <option value="macera">Macera</option>
                    <option value="muzikal">Müzikal</option>
                    <option value="romantik">Romantik</option>
                    <option value="savas">Savaş</option>
                    <option value="spor">Spor</option>
                    <option value="tarihi">Tarihi</option>
                    <option value="uzay">Uzay</option>
                    <option value="videooyunu">Video oyunu</option>
                    <option value="western">Western</option>
                    <option value="genclik">Gençlik</option>



                </select>
                <select class="platform-select" name="" id="" class="platfrom">
                    <option selected hidden value="">Platform</option>
                    <option value="netflix">Netflix</option>
                    <option value="exxen">Exxen</option>
                    <option value="blutv">BluTv</option>
                    <option value="puhu">Puhu Tv</option>
                    <option value="filmbox">FilmBox live</option>

                </select>
                <select class="country-select" name="" id="">
                    <option selected hidden value="">Country</option>
                    <option value="">Azerbaijan</option>
                    <option value="">America</option>
                    <option value="">Turkey</option>
                    <option value="">Russia</option>
                    <option value="">Italy</option>
                    <option value="">France</option>
                    <option value="">Spain</option>
                </select>

            </div>
        </div>

        <div class="filter-btn">
            <button class="search-button" type="submit">Search</button>
            <button class="reset" type="reset">Clear</button>
        </div>
        <div class="search">
            <div class="input-bar">
                <label for="search-text" id="search-label">Type <span>or dictate</span> to search</label>
                <input type="search" name="search" id="search-text" autocomplete="off" />
                <button id="dictate" title="Dictate">
                    <i class="fa fa-microphone"></i>
                    <svg width="1.25rem" height="1.25rem" viewBox="0 0 100 100">
                        <g stroke="#fff" stroke-width="15">
                            <path d="M20,20 20,80">
                                <animate attributeName="d" values="M20,40 20,60;M20,20 20,80;M20,40 20,60" dur="1s"
                                         repeatCount="indefinite" />
                            </path>
                            <path d="M50,10 50,90">
                                <animate attributeName="d" values="M50,10 50,90;M50,40 50,60;M50,10 50,90" dur="1s"
                                         repeatCount="indefinite" />
                            </path>
                            <path d="M80,20 80,80">
                                <animate attributeName="d" values="M80,40 80,60;M80,20 80,80;M80,40 80,60" dur="1s"
                                         repeatCount="indefinite" />
                            </path>
                        </g>
                    </svg>
                    <span class="a11y-hidden">Dictate new search</span>
                </button>
                <button id="search" title="Search">
                    <i class="fa fa-search"></i>
                    <span class="a11y-hidden">Search</span>
                </button>
            </div>

        </div>
    </div>
</section>


